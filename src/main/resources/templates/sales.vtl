    <div class ="row">



        <div class = "col m3 ">

        </div>

        <div class = "col m8">

        <h2>PRODUCTS</h2>

<hr>

    #if($sales.size() == 0)

        <p class="text lighten" >Click the top right button to add a product for sale.</p>
    #else
             <table class = "responsive-table">
                    <thead>
                      <tr>

                          <th>Name</th>
                          <th>Price per Unit</th>
                           <th>Description</th>
                        
                      </tr>
                    </thead>

                    <tbody>
                    #foreach($sale in $sales)
                      <tr>

                        <td>$sale.getName()</td>
                        <td>$sale.getAmount()</td>
                        <td>$sale.getDescription()</td>
               
                      </tr>
                    #end
                    </tbody>
                  </table>

        #end
        </div>

        <div class = "col m1">


        </div>



    </div>














